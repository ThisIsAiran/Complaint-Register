<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <style type="text/css">
    body{
        position: relative;
    }
        .dashboard{
            position: absolute;
            top: 120px;
            width: 100%;
            height: auto;
            min-width: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-family: 'Sniglet', cursive;
        }
        .listOfInput{
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 100%;
            height: auto;
            font-family: 'Sniglet', cursive;
        }
        .complaintsCaption{
            width: 95%;
            height: auto;
            display: flex;
            justify-content: center;
            flex-direction: column;
            border: .5px solid black;
            margin: 1% auto;
            background: white;
            transition-duration: .5s;
        }
        .complaintsCaption:hover{
            box-shadow: 3px 3px 10px 3px grey;
        }
        .complaints{
            width:100%;
            height: auto;
            max-height:100px;
            overflow-y: hidden;
            word-wrap: break-word;
            transition: .7s;
            margin:0% auto;
            padding-top: 15px;
            padding-left: 5px;
            transition: max-height .5s; 
            overflow:hidden;
            color: black;
            font-size: 15px;
        }
        .captionArrow{
            width: 100%;
            height: 25px;
            display: flex;
            flex-direction: row;
            justify-content: center;
            padding-bottom: 2px;
        }
    .complaintsAdd{
        transition: max-height 3s; 
            max-height: 2000px;
        }
        .Arrow{
            cursor: pointer;
        }
        .Rs{
            height: auto;
            display: flex;
            flex-direction: row;
            flex:2;
        }
        .Status{
            width: 40%;
            height: auto;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            font-size:15px;
        }
        .statusButton{
            width: 33%;
            height: auto;
            display: flex;
            flex-direction: row;
            justify-content: center;
            padding: 4px 1px;
            margin: 3px;
            margin-top: 20px;
        }
        .statusButton:hover{
           color: grey;
        }
        .InformText{
            width: 99.9%;
            margin: auto 6px;
            outline-color: #4ECDC4;
            border: none;
            border-bottom:1px solid  grey;
        }
        .radio{
            margin-top: 2%;
            margin-left: 4%;
            width: 18px;
            height: 18px;
            cursor: pointer;
        }
        .first{
            width: 60%;
        }
         label{
           margin-top: 2px;
        }
    @media only screen and (max-width: 800px) {
        .Rs{
            height: auto;
            display: flex;
            flex-direction:column;
            flex:2;
        }
        .Status{
            width: 100%;
            height: auto;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            font-size: 15px;
        }
        .first{
            width: 100%;
        }
        .statusButton{
            width: 33%;
            height: auto;
            display: flex;
            flex-direction: row;
            justify-content: center;
            padding: 3px 1px;
            margin: 3px;
            background: white;
            border:1px solid #4ECDC4;
            border-radius: 5px;
            color: #4ECDC4;
        }
          label{
           margin-top: 2px;
        }
    }
    </style>
</head>
<body>
        <%- include('../partials/adminDashboardHeader') %>
    <div class="dashboard">
        <div class="listOfInput">
            <% for(var i=0; i< adminRecivedComplaint.admin[0].length; i++) { %>
            <% for(var j=0; j< adminRecivedComplaint.admin[0][i].complaints.length; j++) { %>
                <div class="complaintsCaption">
                    <div class="complaints">
                        <span style="color:#4ECDC4 ;">Complaint - </span><%=adminRecivedComplaint.admin[0][i].complaints[j].complaint%>
                    </div>
                    <div class="captionArrow">
                        <i class="fa fa-angle-down Arrow" style="color:black" text-shadow: 1px 1px 3px grey;></i>
                    </div>
                    <form class="Rs" action="/admin/dashboard/<%=adminRecivedComplaint.admin[0][i]._id%>/<%=j%>/<%=adminRecivedComplaint.admin[1]%>" method = "POST">
                        <div class="Status first">
                            <input class="InformText" type="text" name="answer" placeholder="Inform the student by write up">
                        </div>
                        <div class="Status">
                            <div class="statusButton" >
                                <label>Seen</label> <input type="radio"  name="radio" class="radio" value="Seen">
                            </div>
                            <div class="statusButton" >
                                <label>Pending</label> <input type="radio" name="radio" class="radio" value="Pending">
                            </div>
                            <div class="statusButton" class="radio">
                               <label>Solved</label> <input type="radio" name="radio" class="radio" value="Solved">
                            </div>
                            <input  class="statusButton" type="submit" >
                        </div>
                    </form>
                </div> 
            <% } %>
            <% } %>
        </div>   
    </div>
<script type="text/javascript">       
  const studentTab = document.querySelector("studentTab")
  const adminTab = document.querySelector(".adminTab")
</script>
</body>
</html>